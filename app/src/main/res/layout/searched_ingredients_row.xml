<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="?attr/cardview_background"
        app:cardCornerRadius="18dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_searched_food"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                android:theme="@style/ShapeableImageViewRadiusFridge"
                tools:src="@drawable/test_image" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_searched_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_searched_food"
                android:layout_centerInParent="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="5dp"
                android:textAlignment="center"
                android:fontFamily="@font/concert_one"
                android:textColor="?attr/text_color_black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Banana leaves" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>