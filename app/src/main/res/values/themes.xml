<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MealQuest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionModeBackground">@color/backgroundColorLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_primary</item>
        <item name="colorSecondaryVariant">@color/theme_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">@color/theme_primary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="bottom_navigation_color">@color/backgroundColorLight</item>
        <item name="toolbar_color">@color/backgroundColorLight</item>
        <item name="background_color">@color/backgroundColorLight</item>
        <item name="background_color_orange">@color/theme_primary</item>
        <item name="editTextBackground">@color/white</item>
        <item name="cardview_background">@color/backgroundColorLight</item>
        <item name="text_color_black">@color/black</item>
        <item name="text_color_orange">@color/theme_primary</item>
        <item name="text_color_blue">@color/my_blue</item>
        <item name="text_color_white">@color/white</item>
        <item name="sub_text_color">@color/my_dark_grey</item>
        <item name="sub_sub_text_color">@color/my_grey</item>
        <item name="search_color">@color/theme_primary</item>
        <item name="icon_tint_color">@color/white</item>
        <item name="fab_tint_color">@color/my_blue</item>
        <item name="bottom_sheet_background">@color/white</item>
        <item name="overview_background">@color/overview_bg_light</item>
    </style>

    <style name="ShapeableImageViewRadius" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="ShapeableImageOverviewRadius" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="background">@null</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- Title -->
        <item name="android:textColorPrimary">@color/theme_primary</item>
        <!-- Navigation icon -->
        <item name="colorOnPrimary">@color/my_dark_grey</item>
        <!--Text Style-->
        <item name="android:fontFamily">@font/concert_one</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!--Bottom Sheet-->

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

    <!--Fridge Fragment-->
    <style name="ShapeableImageViewRadiusFridge" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!--Detail Activity-->
<!--    <style name="DetailActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">-->
<!--        <item name="colorPrimary">@color/white</item>-->
<!--        <item name="colorAccent">@color/white</item>-->
<!--        <item name="colorControlNormal">@color/red</item>-->
<!--        <item name="android:statusBarColor">@color/white</item>-->
<!--    </style>-->
    
    <!--Tab Layout-->
    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/theme_primary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Tab Layout Text-->
    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:background">@color/theme_primary</item>
    </style>

    <!-- Alert Dialog -->
    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog_Background" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@color/backgroundLayoutColorLight</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/textColorLight</item>
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/theme_primary</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@color/backgroundLayoutColorLight</item>
    </style>
</resources>